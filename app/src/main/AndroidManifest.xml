<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.agrofarmers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.RequestConfirmationActivity"
            android:parentActivityName=".views.RequestActivity" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".views.RequestActivity" />

        <activity
            android:name=".views.RequestActivity"
            android:label="@string/title_activity_request"
            android:theme="@style/AppTheme" />
        <activity android:name=".views.SignupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.SignupDetailsActivity" />
        <activity android:name=".views.StockActivity"></activity>
    </application>

</manifest>